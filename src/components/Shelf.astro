---
const { variant, imgPath, imgAlt, cardName, cardClass, cardTextOne, cardTextTwo, cardTextThree } = Astro.props;
import Card from './Card.astro';
---

<div class="shelf-container">
    <Card 
    imgPath="/imges/karrusel.jpeg" 
    imgAlt="Artist 2" 
    cardTextOne={cardTextOne}
    cardName = "More info"
    variant = primary
    cardClass = white

    

    />
  <Card 
    imgPath="/imges/karrusel.jpeg" 
    imgAlt="Artist 2" 
    cardTextTwo={cardTextTwo}
    cardName = "More info"
    variant = primary
    cardClass = white



  />
  <Card
    imgPath="/imges/karrusel.jpeg" 
    imgAlt="Artist 2" 
    cardTextThree={cardTextThree}
    cardName = "More info"
    variant = secondary
    cardClass = white

  />
 

<style>
  .shelf-container {
    padding: 40px 40px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 10px; /* Justerar avst√•ndet mellan korten */
  }


    @media screen and (max-width: 1100px) {
    .shelf-container {
      padding: 40px 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
    }
}

  
</style>