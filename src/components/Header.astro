<style>
    /* Resetter */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }
    
    body {
        font-family: Arial, sans-serif;
    }
    
    /* Header styling */
    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: black;
        color: yellow;
        padding: 10px 20px;
        height: 60px;
        position: relative;
        z-index: 10; 
    }
    
    /* Left Logo */
    .logo {
        display: flex;
       
    }
    
    
    /* Ticket Icon */
    .ticket {
        display: flex;
        align-items: center;
        position: relative;

    }

    /* Logo */
.logo-img {
    width: 100px; 
    height: auto; 
}

/* Ticket Icon */
.ticket-img {
    width: 100px; 
    height: auto; 
    transition: all 0.2s ease;
}
.ticket:hover .ticket-img {
    content: url('/public/ticket_lilla.svg'); 
}

    /* Hamburger Menu */
    .hamburger {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 50px; 
            width: 50px;  
            cursor: pointer;
            background-color: white;
            border-radius: 50%; 
            align-items: center; 
            padding:10px; 
        }
        
        .hamburger span {
            background-color: rgb(0, 0, 0);
            height: 3px;
            width: 100%;
            border-radius: 2px;
        }
    
    /* Overlay Menu */
    .overlay-menu {
        position: fixed;
        top: 0;
        left: -100%; 
        width: 300px;
        height: 100vh;
        background-color: black;
        color: white;
        display: flex;
        flex-direction: column;
        padding: 20px;
        transition: left 0.3s ease-in-out;
        z-index: 5;
    }
    
    .overlay-menu.open {
        left: 0; 
    }
    
    .overlay-menu ul {
        list-style: none;
        margin-top: 50px;
    }
    
    .overlay-menu ul li {
        margin: 15px 0;
        font-size: 30px;
    }
    
    .overlay-menu ul li a {
        color: white;
        text-decoration: none;
    }
    
    .overlay-menu ul li a:hover {
        color: yellow;
    }
    
    /* Background overlay */
    .overlay-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 4;
        display: none;
    }
    
    .overlay-bg.show {
        display: block; 
    }
    </style>
    
    <header class="header">
 
        <div class="logo">
            <a href="index.astro">
                <img src="/public/logo.svg" alt="Logo" class="logo-img">
            </a>
        </div>
    
        <!-- Ticket Icon -->
        <div class="ticket">
            <a href="">
                <img src="/public/ticket_gul.svg" alt="Ticket" class="ticket-img">
            </a>
        </div>
    
        <!-- Hamburger Menu -->
        <div class="hamburger" id="hamburger">
            <span></span>
            <span></span>
            <span></span>
        </div>
    </header>
    
    <!-- Overlay Menu -->
    <div class="overlay-menu" id="overlay-menu">
        <ul>
            <li><a href="#">LINE-UP</a></li>
            <li><a href="#">MAP</a></li>
            <li><a href="#">TICKETS</a></li>
        </ul>
    </div>
    
    <!-- Background overlay -->
    <div class="overlay-bg" id="overlay-bg"></div>
    
    
    <script>
        const hamburger = document.getElementById('hamburger');
        const overlayMenu = document.getElementById('overlay-menu');
        const overlayBg = document.getElementById('overlay-bg');
    
        hamburger.addEventListener('click', () => {
            overlayMenu.classList.toggle('open');
            overlayBg.classList.toggle('show');
        });
    
        overlayBg.addEventListener('click', () => {
            overlayMenu.classList.remove('open');
            overlayBg.classList.remove('show');
        });
    </script>