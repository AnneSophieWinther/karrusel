---
const { variant, imgPath, imgAlt, cardName, cardClass, cardTextOne, cardTextTwo, cardTextThree } = Astro.props;
import Card from './Card.astro';
---

<div class="shelf-container2">
    <Card 
    imgPath="/imges/lineup.png" 
    imgAlt="Artist 2" 
    cardTextOne={cardTextOne}
    cardName = "More info"
    variant = secondary
    cardClass = black
 
    

    />
  <Card 
    imgPath="/imges/map.png" 
    imgAlt="Artist 2" 
    cardTextTwo={cardTextTwo}
    cardName = "More info"
    variant = secondary
    cardClass = black



  />
  <Card
    imgPath="/imges/tickets.png" 
    imgAlt="Artist 2" 
    cardTextThree={cardTextThree}
    cardName = "More info"
    variant = secondary
    cardClass = black

  />
 

<style>
  .shelf-container2 {
    padding: 40px 40px;
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 10px; 
    background-color: black;

  }

  @media screen and (max-width: 1100px) {
    .shelf-container2 {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 10px;
    }
}

  
</style>