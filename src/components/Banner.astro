---
const { variant = "primary", text = "MANEGEN - THURSDAY - MANEGEN -" } = Astro.props;
---

<div class={variant}>
  <div class="scrolling-text">{text}</div>
</div>

<style>
  .primary {
    overflow: hidden;
    white-space: nowrap;
    background-color: #a64dff; 
    padding: 20px 0;
   
  }

  .primary .scrolling-text {
    display: inline-block;
    font-size: 30px;
    font-weight: bold;
    color: white;
    animation: scroll 10s linear infinite;
  }

  .secondary {
    overflow: hidden;
    white-space: nowrap;
    background-color: #fff616; 
   
  }

  .secondary .scrolling-text {
    display: inline-block;
    font-size: 30px;
    font-weight: bold;
    color: black;
    animation: scroll 10s linear infinite;
  }

  .tertiary {
    overflow: hidden;
    white-space: nowrap;
    background-color: #ffffff; 
    padding: 20px 0;
  }

  .tertiary .scrolling-text {
    display: inline-block;
    font-size: 30px;
    font-weight: bold;
    color: black;
    animation: scroll 10s linear infinite;
  }

  @keyframes scroll {
    from {
      transform: translateX(100%);
    }
    to {
      transform: translateX(-100%);
    }
  }
</style>
